<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DicFragment">

    <RelativeLayout
        android:id="@+id/relativ_layout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/cancel_button2"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="?actionBarItemBackground"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:src="@drawable/cancel"/>

        <TextView
            android:id="@+id/replase_name"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel_button2"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </RelativeLayout>

   <ImageView
       android:id="@+id/replase_img"
       android:layout_width="200dp"
       android:layout_height="150dp"
       android:scaleType="centerCrop"
       android:layout_gravity="center"
       android:src="@drawable/image"
       android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/replase_tht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:gravity="center"
        android:includeFontPadding="true"
        android:fontFamily="sans-serif-smallcaps"/>

</LinearLayout>